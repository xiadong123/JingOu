<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/content"
    style="@style/ActivityStyle1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:divider="@drawable/divider_10dp_transparent"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/divider_1dp_gary2"
        android:elevation="1dp"
        android:orientation="vertical"
        android:showDividers="middle">

        <include
            android:id="@+id/topview"
            layout="@layout/baselayout_top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/activity_mypurse_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/gary4"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/activity_mypurse_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/activity_mypurse_title1"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:text="0.00"
                android:textColor="@color/gary6"
                android:textSize="14dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/activity_mypurse_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/gary4"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/activity_mypurse_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/activity_mypurse_title2"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:text="0.00"
                android:textColor="@color/gary6"
                android:textSize="14dp"/>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>