<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    style="@style/ActivityStyle1"
    android:background="@color/white"
    android:divider="@drawable/divider_10dp_transparent"
    android:orientation="vertical"
    android:showDividers="middle">


    <include
        android:id="@+id/topview"
        layout="@layout/baselayout_top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:text="选择兑换账号数量"
        android:textColor="@color/gary5"
        android:textSize="14dp" />


    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:background="@drawable/fillet_f7f7f7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="-"
            android:textSize="30dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/gary6"
            android:textColorHint="@color/gary6"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="+"
            android:textSize="30dp"
            android:visibility="gone" />


    </LinearLayout>


    <Button
        android:id="@+id/submit"
        android:layout_width="337dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:background="@drawable/fillet_b92c2c"
        android:text="确认兑换"
        android:textColor="@color/white"
        android:textSize="14dp" />


</LinearLayout>


