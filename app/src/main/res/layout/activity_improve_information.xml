<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content"
    style="@style/ActivityStyle1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <include
        android:id="@+id/topview"
        layout="@layout/baselayout_top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/topview"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/activity_improveinformation_layout1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center_vertical"
                android:paddingLeft="11dp"
                android:text="请填写好友发给您的邀请码"
                android:textColor="@color/gary4"
                android:textSize="12dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">


                <TextView
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="邀请码"
                    android:textColor="@color/gary5"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/activity_improveinformation_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="@color/gary6"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/activity_improveinformation_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center_vertical"
                android:paddingLeft="11dp"
                android:text="请填写您的真实信息，通过后将不能修改"
                android:textColor="@color/gary4"
                android:textSize="12dp"/>


            <LinearLayout
                android:id="@+id/activity_improveinformation_layout2_checklayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:divider="@drawable/divider_transparent_3dp_w"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/activity_improveinformation_tv0"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/fillet_b92c2c_4dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="身份证"
                    android:textColor="@color/white"
                    android:textSize="13dp"/>

                <TextView
                    android:id="@+id/activity_improveinformation_tv1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/fillet_e6e6e6_1dp_4dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="护照"
                    android:textColor="@color/gary6"
                    android:textSize="13dp"/>

                <TextView
                    android:id="@+id/activity_improveinformation_tv2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/fillet_e6e6e6_1dp_4dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="台胞证"
                    android:textColor="@color/gary6"
                    android:textSize="13dp"/>

                <TextView
                    android:id="@+id/activity_improveinformation_tv3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/fillet_e6e6e6_1dp_4dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="港澳通行证"
                    android:textColor="@color/gary6"
                    android:textSize="13dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"

                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="真实姓名"
                    android:textColor="@color/gary5"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/activity_improveinformation_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:textColor="@color/gary6"
                    android:textSize="14dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/activity_improveinformation_mycode_title"
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="身份证号"
                    android:textColor="@color/gary5"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/activity_improveinformation_mycode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="@color/gary6"
                    android:textSize="14dp"/>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/activity_improveinformation_submit"
            android:layout_width="336dp"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:background="@drawable/border_02"
            android:onClick="onClick"
            android:text="提交"
            android:textColor="@color/textcolor0"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/activity_improveinformation_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="19dp"
            android:text="用户协议"
            android:textSize="12dp"/>


    </LinearLayout>


    <Button
        android:id="@+id/activity_improveinformation_submit2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:elevation="1dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16dp"/>

</RelativeLayout>


