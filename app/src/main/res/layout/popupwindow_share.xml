<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:divider="@drawable/divider_1dp_gary2"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:id="@+id/popupwindow_share1_content"
            android:layout_width="fill_parent"
            android:layout_height="150.0dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="20.0dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/popupwindow_share1_wxc"
                    android:layout_width="55.0dip"
                    android:layout_height="55.0dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:src="@drawable/share_wx_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5.0dip"
                    android:text="朋友圈"
                    android:textSize="16.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/popupwindow_share1_wx"
                    android:layout_width="55.0dip"
                    android:layout_height="55.0dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:src="@drawable/share_wx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5.0dip"
                    android:text="微信好友"
                    android:textSize="16.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/popupwindow_share1_qq"
                    android:layout_width="55.0dip"
                    android:layout_height="55.0dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:src="@drawable/share_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5.0dip"
                    android:text="QQ好友"
                    android:textSize="16.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/popupwindow_share1_sina"
                    android:layout_width="55.0dip"
                    android:layout_height="55.0dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:src="@drawable/share_weibo_sina" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5.0dip"
                    android:text="新浪微博"
                    android:textSize="16.0dip" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10.0dip"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:paddingTop="10.0dip">

            <Button
                android:id="@+id/popupwindow_share1_cancel"
                android:layout_width="337.0dip"
                android:layout_height="40.0dip"
                android:layout_centerInParent="true"
                android:background="@drawable/fillet_a87c4e_e9bf7c"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="16.0dip" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>