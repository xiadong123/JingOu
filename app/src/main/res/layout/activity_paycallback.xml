<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    style="@style/ActivityStyle1"
    android:orientation="vertical">


    <include
        android:id="@+id/topview"
        layout="@layout/baselayout_top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/activity_paycallback_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/failure" />


            <TextView
                android:id="@+id/activity_paycallback_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:text="付款失败，查看 订单详情 >>"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/activity_paycallback_btn1"
                android:layout_width="187dp"
                android:layout_height="32dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/fillet_textcolor0_1dp"
                android:gravity="center"
                android:text="继续支付"
                android:textColor="@color/textcolor0"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/activity_paycallback_btn2"
                android:layout_width="187dp"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/fillet_b92c2c_1dp"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="@color/red"
                android:textSize="14dp"
                android:visibility="gone" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>


