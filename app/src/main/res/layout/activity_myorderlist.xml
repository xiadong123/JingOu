<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    style="@style/ActivityStyle1"
    android:orientation="vertical">


    <include
        android:id="@+id/topview"
        layout="@layout/baselayout_top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_myorderlist_tv0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/gary5"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/activity_myorderlist_tv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待付款"
                android:textColor="@color/gary5"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/activity_myorderlist_tv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待发货"
                android:textColor="@color/gary5"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/activity_myorderlist_tv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待收货"
                android:textColor="@color/gary5"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/activity_myorderlist_tv4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待评价"
                android:textColor="@color/gary5"
                android:textSize="14dp" />
        </LinearLayout>

        <com.jo.jingou.view.ScllorTabView
            android:id="@+id/activity_myorderlist_scllortabview"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/activity_myorderlist_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>


